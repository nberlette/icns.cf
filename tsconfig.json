{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "dist"
  ]
}
